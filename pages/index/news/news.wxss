/* pages/index/news/news.wxss */
.newsContainer{
  width: 100%;
  height: 100%;
  padding: 40rpx 50rpx;
  box-sizing: border-box;
  position: relative;
}
text{
  font-size: 26rpx;
 
}
textarea{
  width: 100%;
  font-size: 26rpx;
  margin-top: 23rpx;
 Text-indent:50rpx;
}
.newsFoot{
  position: absolute;
  bottom:50rpx;
  left: 0;
  width:100%;
  padding: 0 40rpx;
  box-sizing: border-box;

}
.newsFoot>view{
  width:100%;
  height:80rpx;
  background-color: #EC7426;
  text-align: center;
  color: #fff;
  line-height: 80rpx;
  font-size: 25rpx;
  margin-bottom: 15rpx;
}
.newsFoot>text{
  width:100%;
}