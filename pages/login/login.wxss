/* pages/login/login.wxss */
@import '../../lib/style/font.wxss';
.loginContainer{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}
.loginContainer .userName,.loginContainer .pswd{
  border: 1rpx solid #E9E9E9;
  width:638rpx;
  height:70rpx;
  margin-top: 90rpx;
  border-radius: 10rpx;
  padding-left: 82rpx;
  font-size: 26rpx;
  box-sizing: border-box;
  position: relative;
}
.loginContainer .userName::before,.loginContainer .pswd::before{
  font-family: 'iconfont';
  font-weight: 500;
  font-style: normal;
  content:"\e610";
  position: absolute;
  font-size: 40rpx;
  top:10rpx;
  left:20rpx;
  color: #EA7023;
}
.loginContainer input.pswd::before{
 content:"\e6d1";
}
.loginContainer .pswd{
  margin-top: 55rpx;
}
.loginContainer>.login,.loginContainer>.reg{
  width:640rpx;
  height:73rpx;
  line-height: 73rpx;
  font-size: 30rpx;
  background-color: #EA7023;
  color: #fff;
  margin-top: 90rpx;
}
.loginContainer>.reg{
 
  margin-top: 45rpx;
}
.typeSelect{
  width:100%;
  height:100%;
  background-color: rgba(0,0,0,0.5);
  position: absolute;
  top:0;
  left: 0;
  z-index: 111;

}
.typeSelect>.typeContainer{
  width:490rpx;
 
  background-color: rgba(247,246,247,0.97);
  margin: 130rpx auto;
  text-align: center;
  border-radius: 15rpx;
}
.typeHead{
  width:100%;
  height: 115rpx;
  font-size: 30rpx;
  font-weight: 600;

  line-height: 115rpx;
 
}
.typeContent{
  width:100%;
  max-height: 624rpx;
 
}
.typeItem{
  width:100%;
  height:78rpx;
  line-height: 78rpx;
  font-size: 28rpx;
  border-top:1px solid rgba(210,210,210,0.7);
  box-sizing: border-box;
 
  color: #1C7EF8;
}
.typeFoot{
  width: 100%;
  height:80rpx;
  color: #0D74F8;
  border-top:1px solid rgba(210,210,210,0.7);
  font-size: 29rpx;
  line-height: 80rpx;
  font-weight: 600;
}

